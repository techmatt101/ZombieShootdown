{
  "name": "ZombieShootout",
  "version": "0.1.0",
  "description": "ZombieShootout",
  "author": "Matthew Kemp",
  "repository": {
    "type": "git",
    "url": "https://github.com/techmatt101/ZombieShootout.git"
  },
  "scripts": {
    "build": "npm run build-references & npm run build-core & npm run build-core-dt & npm run build-client & npm run build-server",
    "build-references": "python build_references.py",
    "build-core": "tsc src/core.ts --out build/core.js --target ES5",
    "build-core-dt": "tsc src/core.ts --declaration --out src/server/dt/core.d.ts",
    "build-client": "tsc src/app.ts --out build/app.js --sourcemap --target ES5",
    "build-server": "tsc src/server.ts --outDir build/ --target ES5 --module commonjs",
    "test": "jasmine-node test"
  },
  "dependencies": {
    "webworker-threads": "^0.5.3",
    "ws": "^0.6.3"
  },
  "devDependencies": {
    "bower": "^1.3.12",
    "jasmine-node": "~1.14.3",
    "karma": "~0.12.16",
    "karma-jasmine": "~0.1.5",
    "karma-phantomjs-launcher": "~0.1.4",
    "phantomjs": "~1.9.7-12",
    "typescript": "~1.3.0"
  }
}
